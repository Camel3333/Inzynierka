<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.GenerateVerticesController"
            prefWidth="300">

    <stylesheets>
        <URL value="@/css/generator.css"/>
    </stylesheets>

    <content>
        <VBox>
            <Label text="Define distribution percentage" id="label"/>
            <Slider fx:id="distributionSlider" showTickLabels="true" id="slider"/>
        </VBox>
    </content>

    <ButtonType fx:constant="CANCEL"/>
    <ButtonType fx:constant="OK"/>
</DialogPane>
