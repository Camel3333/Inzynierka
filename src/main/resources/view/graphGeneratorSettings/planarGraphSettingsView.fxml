<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.example.settings.IntegerSettingTextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.controller.graphGeneratorSettings.PlanarGraphSettingsController">

    <VBox spacing="5" fx:id="container">
        <Label text="Select width of grid"/>
        <IntegerSettingTextField fx:id="width"/>
        <Slider fx:id="widthSlider"
                blockIncrement="1.0"
                cache="true"
                majorTickUnit="5.0"
                max="10.0"
                min="0.0"
                minorTickCount="4"
                showTickLabels="true"
                showTickMarks="true"
                snapToTicks="true"
                value="5.0"/>
        <Label text="Select height of grid"/>
        <IntegerSettingTextField fx:id="height"/>
        <Slider fx:id="heightSlider"
                blockIncrement="1.0"
                cache="true"
                majorTickUnit="5.0"
                max="10.0"
                min="0.0"
                minorTickCount="4"
                showTickLabels="true"
                showTickMarks="true"
                snapToTicks="true"
                value="5.0"/>
    </VBox>
</AnchorPane>