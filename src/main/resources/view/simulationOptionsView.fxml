<?xml version="1.0" encoding="UTF-8"?>

<?import com.example.settings.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.SimulationController"
      fx:id="parent"
      style="-fx-background-color: #f4f4f4; -fx-padding: 15px">

    <ComboBox fx:id="algorithmsBox"/>
    <GridPane>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Depth" fx:id="depthLabel"/>
        <IntegerSettingTextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="depth"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Phase" fx:id="phaseLabel"/>
        <IntegerSettingTextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="phase"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Q" fx:id="qLabel"/>
        <IntegerSettingTextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="q"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Time" fx:id="timeLabel"/>
        <IntegerSettingTextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="time"/>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Probability" fx:id="probabilityLabel"/>
        <SettingComboBox GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="probabilityBox"/>
    </GridPane>
    <VBox>
        <Label text="Animation speed"/>
        <Slider fx:id="animationSpeedSlider"
                showTickLabels="true"
                min="0.25"
                max="2."
                value="1."
                majorTickUnit="0.25"
                minorTickCount="0"
                snapToTicks="true"/>
    </VBox>

    <TextFlow style="-fx-max-width: 150px; -fx-wrap-text: true; -fx-text-overrun: clip; -fx-alignment: bottom" fx:id="warning">
        <Text style="-fx-fill: red" text="Note!&#32;"/>
        <Text style="-fx-fill: gray;">
            Algorithms used in this simulation have no standardized way of dealing with non-complete graphs.
        </Text>
    </TextFlow>
    
</VBox>
